{
  "manifest_version": 3,
  "name": "Power Platform Seamless Glider",
  "version": "1.0",
  "description": "A Chrome extension to maintain environment context while navigating between Power Platform services.",
  "permissions": [
    "tabs",
    "storage",
    "https://*.powerapps.com/*",
    "https://*.powerautomate.com/*",
    "https://*.powerpages.microsoft.com/*",
    "https://*.copilotstudio.microsoft.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.powerapps.com/*",
        "https://*.powerautomate.com/*",
        "https://*.powerpages.microsoft.com/*",
        "https://*.copilotstudio.microsoft.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
